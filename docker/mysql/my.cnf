[mysql]
default-character-set = utf8mb4

[mysqld]
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Performance settings (otimizado para desenvolvimento leve)
innodb_buffer_pool_size = 128M
innodb_redo_log_capacity = 67108864
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
max_connections = 50
table_open_cache = 256

# Desabilitar logs desnecessários para desenvolvimento
general_log = 0
slow_query_log = 0

# Security
bind-address = 0.0.0.0
skip-name-resolve

# SQL Mode
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO"

# Desabilitar binary logging para economizar espaço
skip-log-bin

# Autenticação (nova sintaxe)
authentication_policy = mysql_native_password